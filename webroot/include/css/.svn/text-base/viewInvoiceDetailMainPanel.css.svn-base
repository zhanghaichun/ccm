
.scoa-dispute-btnGroups {
    margin: 5px 0;
}

input[type='button'].scoa-dispute--btn {
    margin-left: 2px;
    margin-right: 2px;
    margin-bottom: 4px;
    padding: 1.5px 6px;
    cursor: pointer;
}


.penalty-notes-wrapper-exemption {
	position: absolute;
    display: none;
    padding: 5px;
    padding-bottom: 10px;
    color: #b2b2b2;
    border-radius: 3px;
    background: #383838;
    z-index: 1;
}

/**
 * Autopay error notes
 */
.autopay-error-notes-box { /* Main contianer */
    position: relative;
    display: inline-block;

}

.autopay-error-notes-trigger:before { /* arrow */
    position: absolute;
    top: -3px;
    left: 2px;

    border: 6px solid ;
    border-left-color: transparent;
    border-bottom-color: transparent;
    border-right-color: transparent;
    border-top-color: #383838;
    content: '';
	display: none;
    /*opacity: 0;*/
    transition: all 200ms ease-in-out;
}

.autopay-error-notes-trigger:hover:before {
	display: block;
    /*opacity: 1;*/
    top: -5px;
    left: 2px;
}


.autopay-error-notes-trigger {
    cursor: pointer;
}

.autopay-error-notes-content {

    position: absolute;
    z-index: 0;
    bottom: 14px;
    left: -10px;
    width: 600px;
    min-width: 60px;

    padding: 8px 10px;
    color: white;
    background: #383838;
    line-height: 20px;
	display: none;
    /*opacity: 0;*/
    
    transition: all 200ms ease-in-out;
}

.autopay-error-notes-trigger:hover + .autopay-error-notes-content {
    z-index: 2;
    bottom: 18px;
    left: -10px;

	display: block;
    /*opacity: 1;*/
}

.autopay-error-notes-content .autopayErrorNote {
    margin: 0;
    list-style-position: inside;
    list-style-type: decimal;
}

/**
 * 'Upload SCOA' file input 
 * control in 'Browse Invoice' accordion pull-down menu.
 */
#uploadSCOABtnTd #uploadSCOADataForm {
    position: relative;
    display: inline-block;
}

.upload-scoa-file-input {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    font-size: 0; /* Adapt cursor pointer style for input[file]. */
    opacity: 0;
    cursor: pointer;
}


/**
 * Upload SCOA failed message box
 */
#uploadSCOAFailedMessageBox .message-box-left {
    float: left;
    padding: 30px 0 0 10px;
}

#uploadSCOAFailedMessageBox .message-box-left .failed-icon {
    background: url(images/failed-icon.png) center no-repeat;    
    width: 40px;
    height: 40px;
}

#uploadSCOAFailedMessageBox .message-box-right {
    float: right;
    height: 100%;
    width: 85%;
    font-family: ArialMT;
    font-size: 14px;
    line-height: 18px;
}
#uploadSCOAFailedMessageBox .message-box-right .title{
    font-family: Arial-BoldMT;
    font-size: 20px;
    color: #4A4A4A;
    padding: 10px 0 10px 10px;
}
#uploadSCOAFailedMessageBox .message-box-right .content{
    color: #4A4A4A;
    padding: 5px 0 5px 10px;
}
#uploadSCOAFailedMessageBox .message-box-right .link{
    color: #4A90E2;
    text-decoration: underline;
    padding: 2px 0 2px 10px;
}

#uploadSCOAFailedMessageBox .message-box-right .link:hover {
    cursor: pointer;
}
